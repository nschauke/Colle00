#include <unistd.h>
//#include "ft_putchar.c"
void ft_putchar(char c)
{
    write(1,&c,1);
}

void out( int f,char d, char e, char g)
{
   int i;
   i=0;
   while(i <= f)
   
{      if(i == 1)
      {
        ft_putchar(d);
      }
     
      else if(i == f)
      {
       ft_putchar(g);
         
      }
      else{
          ft_putchar(e);
      }
}
     
     
}

